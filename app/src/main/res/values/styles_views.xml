<resources>

    <!--*********** Edit Texts ***********-->
    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyEditText.Credential">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="MyEditText.Credential.Name">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="MyEditText.Credential.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="MyEditText.Credential.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="MyEditText.Credential.Description">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">2</item>
        <item name="android:gravity">top|start</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!--*********** Text Views ***********-->
    <style name="MyTextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:alpha">0.86</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MyTextView.Black">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyTextView.Header">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="MyTextView.Header.Black">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyTextView.Header.NoData">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--*********** Text Input Layouts ***********-->
    <style name="TextInputLayoutSetup" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- *********************** Buttons  *********************** -->
    <style name="Button.Flat" parent="Widget.AppCompat.Button.Borderless" />

    <style name="Button.Flat.Primary">
        <item name="android:background">@drawable/buttonflat</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
